# PostgreSQL Connection Configuration
# Copy this file to .env and fill in your database credentials
# Note: Bun automatically loads .env files

# PostgreSQL host (required)
POSTGRES_HOST=localhost

# PostgreSQL port (optional, default: 5432)
POSTGRES_PORT=5432

# PostgreSQL database name (required)
POSTGRES_DATABASE=mydb

# PostgreSQL username (required)
POSTGRES_USER=postgres

# PostgreSQL password (required)
POSTGRES_PASSWORD=your_password_here

# Maximum number of connections in the pool (optional, default: 10)
POSTGRES_MAX_CONNECTIONS=10

# Insecure mode - allows write operations (INSERT, UPDATE, DELETE, etc.)
# WARNING: Enable only in development/testing environments
# Default: false (read-only mode)
POSTGRES_INSECURE=false

# Logging configuration (optional)
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Log format: json or human-readable (default: human-readable)
# LOG_FORMAT=json

# SSH Tunnel configuration (optional)
# Enable SSH tunnel for secure database access
SSH_TUNNEL_ENABLED=false

# SSH connection details (required if SSH_TUNNEL_ENABLED=true)
# SSH_HOST=bastion.example.com
# SSH_PORT=22
# SSH_USERNAME=your_ssh_user

# SSH Authentication - Choose ONE method:

# Option 1: Password authentication
# SSH_PASSWORD=your_ssh_password

# Option 2: Private key file path
# SSH_PRIVATE_KEY_PATH=/path/to/id_rsa
# SSH_PASSPHRASE=key_passphrase_if_encrypted

# Option 3: Private key content (useful for CI/CD)
# SSH_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# Local port for tunnel (optional, default: random available port)
# SSH_LOCAL_PORT=5433
